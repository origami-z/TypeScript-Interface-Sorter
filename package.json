{
  "name": "ts-interface-sorter",
  "displayName": "TypeScript Interface Sorter",
  "description": "Sort TypeScript interface properties",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "publisher": "zhihaocui",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "jest": "^26.6.0",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onCommand:extension.sortTsInterface"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.sortTsInterface",
        "title": "TypeScript Sorter: Sort interface properties"
      }
    ],
    "configuration": {
      "title": "TypeScript Interface Sorter",
      "properties": {
        "tsInterfaceSorter.emptyLineBetweenProperties": {
          "type": "boolean",
          "default": true,
          "description": "Controls whether an empty line should be inserted between properties."
        },
        "tsInterfaceSorter.sortByCapitalLetterFirst": {
          "type": "boolean",
          "default": false,
          "description": "Controls whether properties started with capital letters should be sorted first separately before lower case ones."
        }
      }
    }
  },
  "dependencies": {},
  "license": "MIT",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/davidcui2/TypeScript-Interface-Sorter"
  }
}
